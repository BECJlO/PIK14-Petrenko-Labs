        <Label Name="answerLabel" HorizontalContentAlignment="Left" Content="" HorizontalAlignment="Left" Margin="260,71,0,0" VerticalAlignment="Top" Height="25" Width="150" FontWeight="Bold" FontFamily="Perpetua Titling MT" Background="#FFFDFDFD"/>
